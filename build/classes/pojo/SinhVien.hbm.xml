<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class catalog="Manage"
       name="pojo.SinhVien" table="sinhvien">
        <id name="Code" type="string">
            <column length="20" name="Code"/>
        </id>
        <property name="Name" type="string">
            <column length="100" name="Name"/>
        </property>
        <property name="Gender" type="string">
            <column length="20" name="Gender"/>
        </property>
        <property name="PID" type="string">
            <column length="20" name="PID"/>
        </property>
        <property name="ClassCode" type="string">
            <column length="20" name="ClassCode"/>
        </property>
    </class>
</hibernate-mapping>