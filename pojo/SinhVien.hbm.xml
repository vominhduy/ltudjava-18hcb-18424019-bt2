        </id>
        <property name="Name" type="string">
            <column length="100" name="HoVaTen"/>
        </property>
        <property name="Gender" type="String">
            <column length="20"name="GioiTInh"/>
        </property>
        <property name="PID" type="string">
            <column length="20" name="CMND"/>
        </property>
        <property name="ClassCode" type="string">
            <column length="20" name="MaLop"/>
        </property>
    </class>
</hibernate-mapping>